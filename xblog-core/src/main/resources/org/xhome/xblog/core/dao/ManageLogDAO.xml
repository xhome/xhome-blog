<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.xhome.xblog.core.dao.ManageLogDAO">
	
	<cache/>
	
	<insert id="addManageLog" parameterType="org.xhome.xblog.ManageLog" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO xhome_xblog_manage_log (content, action, type, obj, owner, created, status)
		VALUES(#{content}, #{action}, #{type}, #{obj}, #{owner}, #{created}, #{status})
	</insert>
	
	<sql id="restriction_manageLogs">
		<trim prefix="WHERE" prefixOverrides="AND">
			<if test="parameters != null">
				<if test="parameters.content != null">
					AND content LIKE CONCAT('%', #{parameters.content}, '%')
				</if>
				<if test="parameters.action != null">
					AND action = #{parameters.action}
				</if>
				<if test="parameters.type != null">
					AND type = #{parameters.type}
				</if>
				<if test="parameters.obj != null">
					AND obj = #{parameters.obj}
				</if>
				<if test="parameters.owner != null">
					AND owner = #{parameters.owner}
				</if>
				<if test="parameters.created != null">
					AND created LIKE CONCAT(#{parameters.created}, '%')
				</if>
				<if test="parameters.status != null">
					AND status = #{parameters.status}
				</if>
			</if>
		</trim>
	</sql>
	
	<select id="queryManageLogs" resultType="org.xhome.xblog.ManageLog" parameterType="org.xhome.db.query.QueryBase">
		SELECT * FROM xhome_xblog_manage_log
		<include refid="restriction_manageLogs"/>
		ORDER BY created DESC
		<if test="_parameter != null">
			LIMIT #{firstRow}, #{maxRow}
		</if>
	</select>
	
	<select id="countManageLogs" resultType="long" parameterType="org.xhome.db.query.QueryBase">
		SELECT COUNT(*) FROM xhome_xblog_manage_log
		<include refid="restriction_manageLogs"/>
	</select>
	
</mapper>
